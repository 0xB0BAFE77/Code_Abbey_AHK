                If !(this.is_pos_int(value))
                    this.error("Cases can only contain positive integers."
                        , value
                        , "integer"
                        , example)
        
        Return True
    }
    
    modular_calc(case) {
        Local
        
        Return
    }
    
    ; Error handling
    error(msg, found, expected, example) {
        MsgBox, 0x0, % "Error found!"
